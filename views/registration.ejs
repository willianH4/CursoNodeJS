<!DOCTYPE html>
<html lang="es">

<%- include('./include/head.ejs') %>

  <body>
    <!-- include the navigation partial -->
    <%- include('./include/navbar.ejs') %>
    
    <div class="uk-container">
      <div class="uk-card uk-card-default uk-card-body">
        <h1 class="uk-heading-small uk-center-top">Create an a count</h1>
        <form method="POST" action="/auth/register">
          <fieldset class="uk-fieldset">
            <legend class="uk-legend">Name</legend>
            <div class="uk-margin">
              <input class="uk-input" name="fullname" type="text" placeholder="Enter your first and last name">
            </div>
            <legend class="uk-legend">Email</legend>
            <div class="uk-margin">
              <input class="uk-input" name="email" type="email" placeholder="Enter your email"></input>
            </div>
            <legend class="uk-legend">Password</legend>
            <div class="uk-margin">
              <input class="uk-input" name="password" type="password" placeholder="Enter your password"></input>
            </div>
            <div class="uk-margin">
              <button type="submit" class="uk-button  button-primary">Register</button>
            </div>
          </fieldset>
        </form>
        OR 
              <button class="uk-button  button-primary"><a href="auth/login">Login</a></button>
      </div>

    </div>
    
  </body>

</html>